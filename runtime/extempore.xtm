(define remove-all
   (lambda (obj lst)
      (cond ((null? lst)
             '())
            ((list? (car lst))
             (cons (remove-all obj (car lst))
                   (remove-all obj (cdr lst))))
            ((equal? obj (car lst))
             (remove-all obj (cdr lst)))
            (else (cons (car lst) (remove-all obj (cdr lst)))))))


(define (tree-copy tree)
  (let loop ((tree tree))
    (if (pair? tree)
        (cons (loop (car tree)) (loop (cdr tree)))
        tree)))


(define remove-first
   (lambda (obj lst)
      (if (member obj lst)
          (let loop ((new '())
                     (lstb lst))
             (if (equal? (car lstb) obj)
                 (append new (cdr lstb))
                 (loop (append new (list (car lstb))) (cdr lstb))))
          lst)))

(define get-named-arg
   (lambda (name args . default-value)
      (let ((value (member name args)))
         (if value
             (cadr value)
             (if (null? default-value)
			     '()
				 (car default-value))))))

   
(define replace-all
   (lambda (lst alst)
      (if (pair? lst)
          (let loop ((lsta lst) (lstb '()))
             (if (null? lsta) 
                 (reverse lstb)
                 (let* ((v (car lsta))
                        (lstb2 (cond ((pair? v)
                                     (cons (loop v '()) lstb))
                                    ((assoc v alst)
                                     (cons (cdr (assoc v alst)) lstb))
                                    (#t (cons v lstb)))))
                    (loop (cdr lsta) lstb2))))
          lst)))

