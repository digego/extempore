    (if type
        `(begin
           (impc:ti:register-new-polyfunc ,(symbol->string poly_sym) ,(symbol->string implementation_sym) ',type ,(if (null? docstring) "" (car docstring)))
           (impc:ti:create-scheme-wrapper (symbol->string ',implementation_sym))
