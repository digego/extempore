                                     vs)))
                       (impc:ir:get-pretty-closure-arg-strings
                        (cadr (regex:type-split (symbol->string (cadr gpoly-code)) ":"))))
             ;;;;;;;;;;;;;;;;             
             

             (if (<> (length (cdr gpoly-type))
