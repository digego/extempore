                     ;; (println 'ast: 'preset: vars)
                     ;; set generic functions type ( (cadr gpoly-type)|request? + res)
                     (let ((gftype (if request?
                                       (list (cons (+ *impc:ir:closure* (* 2 *impc:ir:pointer*))
                                                   (cons (list request?) resb)))
                                       (list (cons (+ *impc:ir:closure* (* 2 *impc:ir:pointer*))
