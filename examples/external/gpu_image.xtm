	     s1:i32 s2:i32 s3:i32 s4:i32 s5:i32)
      (glClearColor 0.0 0.0 1.0 1.0)
      (glClear (+ GL_COLOR_BUFFER_BIT GL_DEPTH_BUFFER_BIT))
      (set! cnt (+ cnt 5.0))
      
      (glLoadIdentity)
