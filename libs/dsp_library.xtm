;; slower but less noisy (default)
(definec sampler-note-hermite
  (lambda (samples:|128,double*|* samples-length:|128,i64|* samples-offsets:|128,i64|* samples-channels:|128,i64|* index)
    (let ((idx-freq (midi2frq (i64tod index)))
