		 ;(glDisable GL_BLEND)
		 ;(glEnable GL_DEPTH_TEST)
		 (print-ai-string texfile)
		 (glBindTexture GL_TEXTURE_2D (+ 1 idx))))
;	  (begin (glEnable GL_BLEND) (glDisable GL_DEPTH_TST)))
      
