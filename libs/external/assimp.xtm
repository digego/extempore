      ;(if (= (aiGetMaterialColor mtl "$clr.emissive" 0 0 emission) 0)
     ; 	  (color4_to_float4 emission c))
      (glMaterialfv GL_FRONT_AND_BACK GL_EMISSION c)

      ;; (if (and (= (begin (aset! max 0 1)
