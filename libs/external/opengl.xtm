    (if (string=? "Windows" (sys:platform))
        (begin (set! libgl (impc:ti:bind-dylib 'libgl "Gl32.dll"))
               (if (or (null? libgl)
                       (eq? #f libgl))
                   (log-error "Error loading opengl library")))
        (sys:load-escape "Error loading opengl library")))

