;; Load GL

;; set up the current dylib name and path (for AOT compilation)
(bind-dylib libgl
  (cond ((string=? (sys:platform) "Linux")
         "libGL.so")
        ((string=? (sys:platform) "Windows")
         "opengl32.dll")
        ((string=? (sys:platform) "OSX")
         "/System/Library/Frameworks/OpenGL.framework/OpenGL")
