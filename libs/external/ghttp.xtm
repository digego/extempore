;;; ghttp.xtm -- libghttp bindings for extempore

;; Author: Ben Swift
;; Keywords: extempore
;; Required dylibs: libghttp.dylib

;;; Commentary:

;; libghttp (GNOME HTTP library) bindings for Extempore. This is more
;; useful than the curl bindings (even though libcurl is a more
;; featureful library) because it doesn't rely on varargs C calls,
;; which we can't bind in xtlang

;;; Code:

;; lib-loading config
(if *impc:compiler:with-cache* (sys:load "libs/aot-cache/ghttp.xtm" 'quiet))
(sys:load-preload-check 'ghttp)

(impc:aot:suppress-aot-do
 (sys:load "libs/base/base.xtm")
 (sys:load "libs/external/jansson.xtm"))
(impc:aot:insert-forms (sys:load "libs/base/base.xtm" 'quiet))
(impc:aot:insert-forms (sys:load "libs/external/jansson.xtm"))

(impc:aot:insert-header "xtmghttp")

;; set up the current dylib name and path (for AOT compilation)
(bind-dylib libghttp
  (cond ((string=? (sys:platform) "OSX")
         "libghttp.dylib")
        ((string=? (sys:platform) "Linux")
         "libghttp.so")
        ((string=? (sys:platform) "Windows")
         "libghttp.dll")))

(impc:aot:import-ll "xtmghttp")

(define *xtmlib-ghttp-loaded* #t)

