;;  */

(bind-lib libghttp ghttp_set_uri [i32,ghttp_request*,i8*]*)

;; /* Set a proxy for a request
;;  * This will return -1 if the uri is invalid
;;  */

(bind-lib libghttp ghttp_set_proxy [i32,ghttp_request*,i8*]*)

