;;; stb_image.xtm -- Sean Barret's simple image library

;; Author: Ben Swift
;; Keywords: extempore
;; Required dylibs: stb_image

;;; Commentary:

;; grab the source from github, then
;; - rename stb_image*.h to stb_image*.c
;; - clang -dynamiclib -o libstb_image.dylib stb_image.c stb_image_resize.c stb_image_write.c

;;; Code:

(sys:load-preload-check 'stb_image)
(define *xtmlib-stb_image-loaded* #f)

;; set up the current dylib name and path (for precompilation)
(impc:aot:set-dylib-name-info
 'libstb_image
 (cond ((string=? (sys:platform) "OSX")
        "libstb_image.dylib")
       ((string=? (sys:platform) "Linux")
        "libstb_image.so")
       ((string=? (sys:platform) "Windows")
        "libstb_image.dll")
       (else
        (begin (print-with-colors 'red 'default #f (print "Error"))
               (print ": unsupported platform ")
               (print-with-colors 'yellow 'default #f (print (sys:platform)))))))

;; load the dylib
(define libstb_image
  (sys:load-dylib (cdr *impc:aot:current-load-dylib-info*)))

