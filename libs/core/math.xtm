(bind-func lognf
  (lambda (x n)
    (/ (logf x) (logf n))))

(bind-func lognd
  (lambda (x n)
    (/ (logd x) (logd n))))

(bind-poly logn lognf)
(bind-poly logn lognd)

(bind-func clampf
  (lambda (x:float _min _max)
    (if (> x _max) _max
        (if (< x _min) _min
            x))))

(bind-func clampd
  (lambda (x:double _min _max)
    (if (> x _max) _max
        (if (< x _min) _min
            x))))

(bind-poly clamp clampd)
(bind-poly clamp clampf)

