;; vector types

(bind-func vector-test1
  (lambda ()
    (let ((v1:/4,float/* (alloc))
	  (v2:/4,float/* (alloc))
	  (v3:/4,float/* (alloc)))
      (vfill! v1 4.0 3.0 2.0 1.0)
