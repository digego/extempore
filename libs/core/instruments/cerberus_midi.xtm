      (lambda (inst:i8* offset:i32 cc:i32 value:i32)
        ;; (println 'cerberus_extras_cc cc value)
        (set! val (/ (i32tof value) 127.0))
        ;; nothing yet!
        void))))

(bind-func cerberus_cc
  (let ((osc1 0) (osc1l 8:i32) ;; 6 params
        (osc2 (+ osc1 osc1l)) (osc2l 8:i32) ;; 6 params
        (osc3 (+ osc2 osc2l)) (osc3l 8:i32) ;; 6 params
        (osc4 (+ osc3 osc3l)) (osc4l 8:i32) ;; 6 params
        (subnoise (+ osc4 osc4l)) (subnoisel 4:i32) ;; 3 params
        (filter (+ subnoise subnoisel)) (filterl 4:i32) ;; 4 params
        (amp_pitch_env (+ filter filterl)) (amp_pitch_envl 8:i32) ;; 7 params
        (filter_env (+ amp_pitch_env amp_pitch_envl)) (filter_envl 8:i32)    ;; 7 params
        (delay (+ filter_env filter_envl)) (delayl 4:i32) ;; 4 params
        (reverb (+ delay delayl)) (reverbl 4:i32) ;; 4 params
        (flanger (+ reverb reverbl)) (flangerl 8:i32) ;; 5 params
        (main (+ flanger flangerl)) (mainl 4:i32) ;; 4 params
        (matrix (+ main mainl)) (matrixl 4:i32) ;; 3 params
        (lfo1 (+ matrix matrixl)) (lfo1l 8:i32) ;; 8 params
        (extras (+ lfo1 lfo1l)) ;; everything else!
        (cerberus_osc1_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_osc2_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_osc3_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_osc4_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_sub_noise_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_filter_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_amp_pitch_env_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_filter_env_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_delay_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_reverb_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_flanger_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_main_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_matrix_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_lfo1_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (cerberus_extras_ccs:|16,[void,i8*,i32,i32,i32]*|* (alloc))
        (i:i64 0)

        (print_offsets (lambda ()
                         (println 'cc_offsets------------------)
                         (println 'osc1: osc1)
                         (println 'osc2: osc2)
                         (println 'osc3: osc3)
                         (println 'osc4: osc4)
                         (println 'subnoise: subnoise)
                         (println 'filter: filter)
                         (println 'amp_pitch_env amp_pitch_env)
                         (println 'filter_env: filter_env)
                         (println 'delay: delay)
                         (println 'reverb: reverb)
                         (println 'flanger: flanger)
                         (println 'main: main)
                         (println 'matrix: matrix)
                         (println 'lfo1: lfo1)
                         ; (println 'lfo2: lfo2)
                         ; (println 'lfo3: lfo3)
                         ; (println 'lfo4: lfo4)
                         (println 'extras: extras)
                         void)))
    (dotimes (i 16)
      (aset! cerberus_osc1_ccs i (cerberus_osc1_cc))
      (aset! cerberus_osc2_ccs i (cerberus_osc2_cc))
      (aset! cerberus_osc3_ccs i (cerberus_osc3_cc))
      (aset! cerberus_osc4_ccs i (cerberus_osc4_cc))
      (aset! cerberus_sub_noise_ccs i (cerberus_sub_noise_cc))
      (aset! cerberus_filter_ccs i (cerberus_filter_cc))
      (aset! cerberus_amp_pitch_env_ccs i (cerberus_amp_pitch_env_cc))
      (aset! cerberus_filter_env_ccs i (cerberus_filter_env_cc))
      (aset! cerberus_delay_ccs i (cerberus_delay_cc))
      (aset! cerberus_reverb_ccs i (cerberus_reverb_cc))
      (aset! cerberus_flanger_ccs i (cerberus_flanger_cc))
      (aset! cerberus_main_ccs i (cerberus_main_cc))
      (aset! cerberus_matrix_ccs i (cerberus_matrix_cc))
      (aset! cerberus_lfo1_ccs i (cerberus_lfo1_cc))
      (aset! cerberus_extras_ccs i (cerberus_extras_cc))
      void)
    (lambda (inst chan:i32 cc:i32 value:i32)
      (let ((val:float (/ (i32tof value) 127.0)))
        (cond ((< cc osc2) ((aref cerberus_osc1_ccs chan) inst osc1 cc value))  ;; OSC 1
              ((< cc osc3) ((aref cerberus_osc2_ccs chan) inst osc2 cc value))  ;; OSC 2
              ((< cc osc4) ((aref cerberus_osc3_ccs chan) inst osc3 cc value))  ;; OSC 3
              ((< cc subnoise) ((aref cerberus_osc4_ccs chan) inst osc4 cc value))  ;; OSC 4
              ((< cc filter) ((aref cerberus_sub_noise_ccs chan) inst subnoise cc value)) ;; sub osc and noise
              ((< cc amp_pitch_env) ((aref cerberus_filter_ccs chan) inst filter cc value)) ;; filter
              ((< cc filter_env) ((aref cerberus_amp_pitch_env_ccs chan) inst amp_pitch_env cc value)) ;; amp_pitch_env
              ((< cc delay) ((aref cerberus_filter_env_ccs chan) inst filter_env cc value)) ;; filter_env
              ((< cc reverb) ((aref cerberus_delay_ccs chan) inst delay cc value)) ;; delay
              ((< cc flanger) ((aref cerberus_reverb_ccs chan) inst reverb cc value)) ;; reverb
              ((< cc main) ((aref cerberus_flanger_ccs chan) inst flanger cc value)) ;; flanger
              ((< cc matrix) ((aref cerberus_main_ccs chan) inst main cc value))
              ((< cc lfo1) ((aref cerberus_matrix_ccs chan) inst matrix cc value))
              ((< cc extras) ((aref cerberus_lfo1_ccs chan) inst lfo1 cc value)) ;; main
              (else ((aref cerberus_extras_ccs chan) inst extras cc value))))))) ;; extras

(bind-func print_cc_offsets
  (lambda ()
    ((cerberus_cc.print_offsets:[void]*))))
