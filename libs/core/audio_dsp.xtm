(bind-func static midi2frq
  (lambda (pitch:SAMPLE)
    (if (<= pitch 0.0) 0.0
        (* 440.0 (pow 2.0 (/ (- pitch 69.0) 12.0))))))

(bind-func static frq2midi
  (lambda (freq:SAMPLE)
    (if (<= freq 0.0) 0.0
        (+ (* 12.0 (log2 (/ freq 440.0))) 69.0))))

(bind-func static bpm2hz
  "pretty simple, but the name helps for code clarity"
  (lambda (bpm:SAMPLE)
    (/ 60.0 bpm)))

(bind-func static hz2bpm
  "pretty simple, but the name helps for code clarity"
  (lambda (hz:SAMPLE)
    (* 60.0 hz)))

