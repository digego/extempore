  (lambda (nchan:i64)
    (let ((skf_buf:[SAMPLE,SAMPLE,SAMPLE,SAMPLE]** (zalloc nchan))
          (i:i64 0))
      (dotimes (i nchan) (pset! skf_buf i (skf_c)))
      (lambda (chan in cutoff res)
        ((pref skf_buf chan) in cutoff res)))))



