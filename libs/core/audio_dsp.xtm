          (gidx 0)
          (offset 0)
          (out:SAMPLE 0.0) (i 0)
          (cachesize:i64 (* 88200 2 channels))
          (cnt cachesize)
          (audio_cache:SAMPLE* (alloc cachesize))
          (lengths:|200,double|* (alloc))
          (durations:|200,double|* (alloc))
          (phases:|200,double|* (alloc))
