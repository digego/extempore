(bind-func polygen:[!a,!a]*
  (lambda (x)
    (* 1 x)))

(bind-func polygen:[!a,!a,!a]*
  (lambda (x y)
    (* 1 x y)))

(bind-func polygen:[!a,!a,!a,!a]*
  (lambda (x y z)
    (* 1 x y z)))

(xtmtest '(bind-func arity_test
            (lambda (x:i32 y:i32 z:i32)
              (let ((a (polygen x))
                    (b (polygen x y))
                    (c (polygen x y z)))
                (println a b c)
                c)))

         (arity_test 1 2 3) 6)

