;;
;; generic overloading
;;
(bind-func gen_sqr:[!a,!a]*
  (lambda (x)
    (* x x)))

(bind-func gen_sqr:[Pair*,Pair*]*
  (lambda (x)
    (Pair (* (first x) (first x))
          (* (second x) (second x)))))

(bind-func gen_sqr:[List*,List*]*
  (lambda (lst)
    (map (lambda (x) (gen_sqr x)) lst)))

(xtmtest '(bind-func gen_sqr_test
            (lambda ()
              (println (gen_sqr 2)
                       (gen_sqr 3.0)
                       (gen_sqr (Pair 4.0 5.0))
                       (gen_sqr (list 6 7 8)))))

         (gen_sqr_test))
